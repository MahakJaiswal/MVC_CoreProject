@model Visitor_Management.Models.Cls_Location

<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">


<div class="row">
    <div class="col-md-12">
        <div class="row">

            <div class="col-md-4">
                <div class="form-group">
                    <label for="LocationName">Enter Location</label><label class="text-red">*</label>
                    @Html.TextBoxFor(model => model.LocationName, new { @class = "form-control", placeholder = "Enter Location", required = "required" })

                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="Address">Enter Address</label><label class="text-red">*</label>
                    @Html.TextBoxFor(model => model.Address, new { @class = "form-control", placeholder = "Enter Address", required = "required" })

                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="Pincode">Enter Pincode</label><label class="text-red">*</label>
                    @Html.TextBoxFor(model => model.Pincode, new { @class = "form-control", placeholder = "Enter Pincode", required = "required" })

                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="Shiftstart">Enter Shiftstart</label><label class="text-red">*</label>
                    @Html.TextBoxFor(model => model.Shiftstart, new { @class = "form-control", placeholder = "Enter Shiftstart", required = "required" })

                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="Shiftend">Enter Shiftend</label><label class="text-red">*</label>
                    @Html.TextBoxFor(model => model.Shiftend, new { @class = "form-control", placeholder = "Enter Shiftend", required = "required" })

                </div>
            </div>

            <div class="col-md-4" style="margin-top:4%">
                <div class="form-group">
                    <button type="submit" id="btn_submit" class="btn btn-info" name="Save" value="Save">Save</button>
                </div>
            </div>

        </div>
    </div>
</div>

<script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>


<script>

    $('#Shiftstart').timepicker({
        timeFormat: 'HH:mm',
        timeOnly: true,
        ampm: true,
        dynamic: false,
        dropdown: true,
        scrollbar: true
    });

    $('#Shiftend').timepicker({
        timeFormat: 'HH:mm',
        timeOnly: true,
        ampm: true,
        dynamic: false,
        dropdown: true,
        scrollbar: true
    });
    
</script>