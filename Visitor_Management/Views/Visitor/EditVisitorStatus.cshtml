@model Visitor_Management.Models.Cls_Visitor

<div class="panel panel-info">

    
    <div class="panel-heading">@Html.Raw(Model.Name)</div>
    <div class="panel-body">

        <div class="row">

            <div class="col-md-4" hidden="hidden">
                <div class="form-group">
                    <label for="Visitor_id">Visitor Id </label><label style="color:red">*</label>
                    @Html.TextBoxFor(model => model.Visitor_Id, new { @class = "form-control", required = "required", placeholder = "Enter EmpId " })
                    @Html.ValidationMessageFor(model => model.Visitor_Id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    @Html.ListBoxFor(model => model.selvisitorcardno, new SelectList(Model.VCardNoDDL.Select(x => new { Value = x.Value, Text = x.Text }), "Value", "Text", Model.selvisitorcardno), new { @class = "boot-multiselect-demo  form-control", required = "required"})
                    @Html.ValidationMessageFor(model => model.selvisitorcardno, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group" id="btn_Email">
                    <button type="submit" class="btn btn-default" name="status" value="status">Mark Exit</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Js/bootstrap-multiselect.js"></script>
<script>
    $(document).ready(function () {


        $('#selvisitorcardno').multiselect({
            nonSelectedText: 'Select VisitorCard',
            includeSelectAllOption: true,
            buttonWidth: 245,
            enableFiltering: true,
            enableCaseInsensitiveFiltering: true,
            numberDisplayed: 5
        });
        //$("i").removeClass('glyphicon glyphicon-search').addClass('fa fa-search');
    });
</script>